    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha json_objects tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/src/tests/json_objects.test.ts",
            ],
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
